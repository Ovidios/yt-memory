{
    "manifest_version": 2,
    "name": "YT Memory",
    "version": "1.1",

    "description": "Keeps a log of YouTube videos you've seen, in case you accidentally click away.",

    "icons": {
        "48": "icons/ytm-48.png",
        "96": "icons/ytm-96.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "find_videos.js"
            ],
            "run_at": "document_idle"
        }
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "@yt-memory.jrmh.me"
        }
    },

    "permissions": ["storage"],

    "browser_action": {
        "default_icon": "icons/ytm-32.png",
        "default_title": "Show History",
        "default_popup": "popup/history.html"
    }
}